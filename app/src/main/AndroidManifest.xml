<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.myapplicationlist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Sun"
            android:label="@string/title_activity_sun"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Mon"
            android:label="@string/title_activity_mon"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Tue"
            android:label="@string/title_activity_tue"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Wed"
            android:label="@string/title_activity_wed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Thur"
            android:label="@string/title_activity_thur"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Fri"
            android:label="@string/title_activity_fri"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Sat"
            android:label="@string/title_activity_sat"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>